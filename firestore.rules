rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.email.matches('.*@nordicriser\\.com');
    }

    // Messages collection
    match /messages/{messageId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.participants;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.senderId;
    }

    // Documents collection
    match /documents/{documentId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.visibleTo;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.uploadedBy;
    }

    // Cases collection
    match /cases/{caseId} {
      allow create: if request.auth != null && request.auth.token.email.matches('.*@nordicriser\\.com');
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.token.email.matches('.*@nordicriser\\.com'));
      allow update: if request.auth != null &&
        request.auth.token.email.matches('.*@nordicriser\\.com');
    }
  }
}
